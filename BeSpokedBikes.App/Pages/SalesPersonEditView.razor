@page "/editsalesperson/{Id}"


<section class="salesperson-edit">
    <h1 class="page-title">Update @UpdateSalesPerson.FirstName @UpdateSalesPerson.LastName</h1>
    <EditForm Model="@UpdateSalesPerson" OnValidSubmit="@HandleValidSubmit" OnInvalidSubmit="@HandleInvalidSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary></ValidationSummary>
        <div class="form-group row">
            <label for="firstName" class="col-sm-3">First Name: </label>
            <InputText id="firstName" class="form-control col-sm-8" @bind-Value="@UpdateSalesPerson.FirstName" placeholder="Enter first name"></InputText>
            <ValidationMessage class="offset-sm-3 col-sm-8" For="@(() => UpdateSalesPerson.FirstName)" />
        </div>

        <div class="form-group row">
            <label for="lastName" class="col-sm-3">Last Name: </label>
            <InputText id="lastName" class="form-control col-sm-8" @bind-Value="@UpdateSalesPerson.LastName" placeholder="Enter last name"></InputText>
            <ValidationMessage class="offset-sm-3 col-sm-8" For="@(() => UpdateSalesPerson.LastName)" />
        </div>

        <div class="form-group row">
            <label for="address" class="col-sm-3">Address: </label>
            <InputText id="address" class="form-control col-sm-8" @bind-Value="@UpdateSalesPerson.Address" placeholder="Enter address"></InputText>
            <ValidationMessage class="offset-sm-3 col-sm-8" For="@(() => UpdateSalesPerson.Address)" />
        </div>

        <div class="form-group row">
            <label for="phone" class="col-sm-3">Phone Number: </label>
            <InputText id="phone" class="form-control col-sm-8" @bind-Value="@UpdateSalesPerson.Phone" placeholder="Enter phone number"></InputText>
            <ValidationMessage class="offset-sm-3 col-sm-8" For="@(() => UpdateSalesPerson.Phone)" />
        </div>

        <div class="form-group row">
            <label for="terminationDate" class="col-sm-3">Termination Date: </label>
            <InputDate id="terminationDate" class="form-control col-sm-8" @bind-Value="@UpdateSalesPerson.TerminationDate" placeholder="Enter Termination Date"></InputDate>
        </div>

        <div class="form-group row">
            <label for="manager" class="col-sm-3">Manager: </label>
            <InputText id="manager" class="form-control col-sm-8" @bind-Value="@UpdateSalesPerson.Manager" placeholder="Enter manager"></InputText>
            <ValidationMessage class="offset-sm-3 col-sm-8" For="@(() => UpdateSalesPerson.Manager)" />
        </div>

        <button type="submit" class="btn btn-primary edit-btn">Update Sales Person</button>
        <a class="btn btn-primary edit-btn" @onclick="@ReinstateSalesPerson">Reinstate</a>
        <a class="btn btn-outline-primary" @onclick="@NavigateToSalesPersons">Cancel</a>
    </EditForm>
</section>
@if (Failed)
{
    <div class="alert alert-danger">@Message</div>
}